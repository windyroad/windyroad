{
  "name": "windy-road",
  "description": "Windy Road",
  "version": "1.0.0",
  "author": "Tom Howard <tom@windyroad.com.au>",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "email-validator": "^2.0.3",
    "font-awesome": "^4.7.0",
    "gatsby": "^1.9.232",
    "gatsby-image": "^1.0.42",
    "gatsby-link": "^1.6.39",
    "gatsby-plugin-favicon": "^2.1.1",
    "gatsby-plugin-google-analytics": "^1.0.31",
    "gatsby-plugin-react-helmet": "^2.0.7",
    "gatsby-plugin-sharp": "^1.6.41",
    "gatsby-source-filesystem": "^1.5.27",
    "gatsby-transformer-remark": "^1.7.37",
    "gatsby-transformer-sharp": "^1.6.22",
    "react-flexbox-grid": "^2.0.0",
    "react-fontawesome": "^1.6.1",
    "react-helmet": "^5.2.0",
    "react-scroll": "^1.7.8",
    "react-validation": "^3.0.7",
    "set-interval": "^2.0.1",
    "url-template": "^2.0.8"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "lint:js": "eslint \"**/*.{js,jsx}\"",
    "lint": "run-p lint:*",
    "precommit": "lint-staged",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "start": "gatsby serve",
    "format": "prettier --write 'src/**/*.js'",
    "test:wip-wait": "wdio wdio.wip-wait.conf.js",
    "test:continuous-sub": "wdio wdio.continuous.conf.js",
    "test:continuous": "nodemon --exec npm run test:continuous-sub",
    "test:wip": "node --inspect ./node_modules/.bin/wdio wdio.wip.conf.js",
    "test:dev": "wdio wdio.dev.conf.js",
    "pre-commit": "npm run test:build",
    "test:headless-prebuilt": "forever start -v ./node_modules/.bin/gatsby serve & (wdio wdio.headless.conf.js; wdio_ret=$?; forever stop ./node_modules/.bin/gatsby; exit $wdio_ret)",
    "test:headless": "gatsby build; forever start -v ./node_modules/.bin/gatsby serve & (wdio wdio.headless.conf.js; wdio_ret=$?; forever stop ./node_modules/.bin/gatsby; exit $wdio_ret)",
    "test:build": "gatsby build; forever start -v ./node_modules/.bin/gatsby serve & (wdio wdio.conf.js; wdio_ret=$?; forever stop ./node_modules/.bin/gatsby; exit $wdio_ret)",
    "package": "mkdir target && cd public && tar zcvf ../target/windyroad.tar.gz *",
    "prerelease": "node ./scripts/prerelease.js ./target/windyroad.tar.gz",
    "deploy": "cat scripts/deploy.sh | ssh s25627.gridserver.com -l tom@windyroad.com.au GITHUB_TOKEN=$GITHUB_TOKEN CIRCLE_BUILD_NUM=$CIRCLE_BUILD_NUM 'bash -s'"
  },
  "devDependencies": {
    "babel-core": "~6.26.3",
    "babel-jest": "~23.0.1",
    "babel-preset-env": "~1.7.0",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "chai-webdriverio": "^0.4.3",
    "chromedriver": "^2.40.0",
    "cucumber": "^4.2.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "forever": "~0.15.3",
    "gatsby-plugin-eslint": "^1.0.3",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.11.1",
    "selenium-standalone": "^6.15.1",
    "wait-port": "0.2.2",
    "wdio-chromedriver-service": "^0.1.3",
    "wdio-cucumber-framework": "^2.1.0",
    "wdio-cucumber-snippet-reporter": "0.0.4",
    "wdio-firefox-profile-service": "^0.1.1",
    "wdio-junit-reporter": "^0.4.3",
    "wdio-selenium-standalone-service": "0.0.10",
    "webdriverio": "^4.12.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
